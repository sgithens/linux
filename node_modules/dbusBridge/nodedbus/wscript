srcdir = '.'
blddir = 'build'
VERSION = '0.0.1'

def set_options(opt):
  opt.tool_options('compiler_cxx')

def configure(conf):
  conf.check_tool('compiler_cxx')
  conf.check_tool('node_addon')
  conf.check_cfg(package='gio-2.0', uselib_store='GIO', args='--cflags --libs')
  conf.check_cfg(package='json-glib-1.0', uselib_store='JSON-GLIB', args='--cflags --libs')

def build(bld):
  obj = bld.new_task_gen('cxx', 'shlib', 'node_addon')
  obj.target = 'nodedbus'
  obj.source = 'nodedbus.cc'
  obj.uselib = "GIO"
  obj.uselib = "JSON-GLIB"
